@page
@model ECommerce.Web.Pages.Account.Login
@{
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label for="@Model.Username" class="form-label">Username</label>
                <input type="email" class="form-control" id="username" aria-describedby="emailHelp" asp-for="@Model.Username">
                <div id="userHelp" class="form-text">You're Email is protected'</div>
            </div>
            <div class="mb-3">
                <label for="@Model.Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" asp-for="@Model.Password">
            </div>
            <button type="confirm" class="btn btn-primary">Confirm</button>
        </form>
    </div>
</div>